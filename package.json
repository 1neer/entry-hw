{
    "name": "entry_hw",
    "version": "1.9.2",
    "description": "엔트리 하드웨어 연결 프로그램",
    "author": "EntryLabs",
    "main": "app/index.js",
    "scripts": {
        "lint": "eslint app",
        "clean": "rimraf dist",
        "start": "set NODE_ENV=development&&electron -d app",
        "debug": "set NODE_ENV=development&&electron -d app --inspect",
        "rebuild": "electron-rebuild -f -w serialport",
        "update:licence": "lcdoc make -o app/OPENSOURCE.md -d 1",
        "webpack:watch": "webpack -w",
        "dist:win32": "electron-builder --win --ia32",
        "dist:mac:notarize": "cross-env NOTARIZE=true CSC_NAME=\"Connect Foundation (DLFUSDA3L5)\" electron-builder",
        "dist:mac": "cross-env NOTARIZE=false CSC_NAME=\"Connect Foundation (DLFUSDA3L5)\" electron-builder",
        "postinstall": "electron-rebuild -f -w serialport && webpack"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.144",
        "@types/react": "^16.9.9",
        "@types/react-dom": "^16.9.2",
        "@types/react-redux": "^7.1.5",
        "@types/react-transition-group": "^4.2.3",
        "@types/redux": "^3.6.0",
        "@types/styled-components": "^4.1.19",
        "babel-plugin-styled-components": "^1.10.6",
        "cross-env": "^5.1.3",
        "electron": "^7.1.1",
        "electron-builder": "^22.1.0",
        "electron-notarize": "^0.2.0",
        "electron-rebuild": "^1.8.6",
        "eslint": "^4.18.2",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-prettier": "^3.0.1",
        "immer": "^4.0.2",
        "lcdoc": "^0.0.2",
        "prettier": "^1.16.4",
        "react": "^16.10.2",
        "react-cli": "^0.3.1",
        "react-dom": "^16.10.2",
        "redux": "^4.0.4",
        "rimraf": "^2.6.3",
        "styled-components": "^4.4.0",
        "ts-loader": "^6.2.0",
        "typescript": "^3.6.4",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.9"
    },
    "dependencies": {
        "cross-spawn": "^7.0.0",
        "lodash": "^4.17.13",
        "object.assign": "^4.0.4",
        "react-redux": "^7.1.1",
        "react-transition-group": "^4.3.0",
        "serialport": "^8.0.5",
        "socket.io": "^2.2.0",
        "socket.io-client": "^2.2.0"
    }
