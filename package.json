{
    "name": "entry_hw",
    "version": "1.9.3",
    "description": "엔트리 하드웨어 연결 프로그램",
    "author": "EntryLabs",
    "main": "app/index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=development electron ./app/index.js",
        "debug": "npm run start --inspect",
        "webpack:dev": "cross-env NODE_ENV=development webpack",
        "webpack:prod": "cross-env NODE_ENV=production webpack",
        "webpack:deploy": "cross-env DEPLOY=true webpack",
        "webpack:watch": "cross-env NODE_ENV=development webpack -w",
        "update:licence": "lcdoc make -o app/OPENSOURCE.md -d 1",
        "test": "node --no-warnings ./cli",
        "dist:win32": "npm run webpack:prod && electron-builder --win --ia32",
        "dist:mac:notarize": "npm run webpack:prod && cross-env NOTARIZE=true CSC_NAME=\"Connect Foundation (DLFUSDA3L5)\" electron-builder",
        "dist:mac": "npm run webpack:prod && cross-env NOTARIZE=false CSC_NAME=\"Connect Foundation (DLFUSDA3L5)\" electron-builder",
        "rebuild": "electron-rebuild -f -w serialport,node-hid",
        "setting": "npm run rebuild && npm run webpack:dev"
    },
    "devDependencies": {
        "@babel/core": "^7.8.3",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-private-methods": "^7.8.3",
        "@babel/preset-env": "^7.8.3",
        "@types/lodash": "^4.14.144",
        "@types/react": "^16.9.9",
        "@types/react-dom": "^16.9.2",
        "@types/react-redux": "^7.1.5",
        "@types/react-transition-group": "^4.2.3",
        "@types/styled-components": "^4.1.19",
        "@typescript-eslint/eslint-plugin": "^2.11.0",
        "@typescript-eslint/parser": "^2.11.0",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.0.6",
        "babel-plugin-styled-components": "^1.10.6",
        "babel-polyfill": "^6.26.0",
        "cross-env": "^5.1.3",
        "electron": "^7.1.3",
        "electron-builder": "^21.2.0",
        "electron-notarize": "^0.2.1",
        "electron-rebuild": "^1.8.8",
        "eslint": "^6.7.2",
        "file-loader": "^5.0.2",
        "immer": "^4.0.2",
        "inquirer": "^7.0.3",
        "lcdoc": "^0.0.2",
        "react": "^16.10.2",
        "react-cli": "^0.3.1",
        "react-dom": "^16.10.2",
        "react-redux": "^7.1.1",
        "react-transition-group": "^4.3.0",
        "redux": "^4.0.4",
        "styled-components": "^4.4.0",
        "ts-loader": "^6.2.0",
        "typescript": "^3.6.4",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.9",
        "webpack-merge": "^4.2.2"
    },
    "dependencies": {
        "cross-spawn": "^7.0.0",
        "lodash": "^4.17.13",
        "node-hid": "^1.1.0",
        "serialport": "^8.0.5",
        "socket.io": "^2.2.0",
        "socket.io-client": "^2.2.0",
        "tar": "^5.0.5"
    }
}
